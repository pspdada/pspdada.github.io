---
import type { Props } from "@astrojs/starlight/props";

import EditLink from "@astrojs/starlight/components/EditLink.astro";
import Pagination from "@astrojs/starlight/components/Pagination.astro";
---

<footer class="sl-flex">
  <div class="meta sl-flex">
    <a href="https://github.com/pspdada/" target="_blank" rel="noopener">
      <span>Â© 2025 psp_dada</span>
    </a>
    <p>
      Built with <a href="https://astro.build/" target="_blank" rel="noopener"
        >Astro</a
      > + <a
        href="https://starlight.astro.build/"
        target="_blank"
        rel="noopener">Starlight</a
      >
    </p>
    <a
      href="https://creativecommons.org/licenses/by-nc/4.0/"
      target="_blank"
      rel="noopener"
    >
      <span>CC BY-NC 4.0 International</span>
    </a>

    <EditLink {...Astro.props} />
  </div>
  <Pagination {...Astro.props} />
</footer>

<style>
  /* Copied from the `Footer` component. */
  footer {
    flex-direction: column;
    gap: 1.5rem;
  }
  .meta {
    gap: 0.75rem 3rem;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: 3rem;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-gray-3);
  }
  .meta > :global(p:only-child) {
    margin-inline-start: auto;
  }

  /* Copied from the `EditLink` component. */
  a {
    text-decoration: none;
    color: var(--sl-color-gray-3);
  }
  a:hover {
    color: var(--sl-color-white);
  }
</style>
